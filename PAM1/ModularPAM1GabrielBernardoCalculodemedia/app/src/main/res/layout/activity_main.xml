<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:background="@color/fundo"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView android:id="@+id/txt_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/edt_nota1"
        android:text="Insira suas notas"
        android:textStyle="bold"
        android:textSize="26sp"
        android:textColor="#076800"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="10dp" />

    <EditText android:id="@+id/edt_nota1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="90dp"
        android:layout_marginStart="50dp"
        android:padding="22sp"
        android:hint="nota 1"
        android:textStyle="bold"
        android:inputType="number"
        android:background="@color/campo"/>

    <EditText android:id="@+id/edt_nota2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_titulo"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="50dp"
        android:padding="22sp"
        android:hint="nota 2"
        android:textStyle="bold"
        android:inputType="number"
        android:background="@color/campo"/>

    <EditText android:id="@+id/edt_nota3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edt_nota1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="50dp"
        android:padding="22sp"
        android:hint="nota 3"
        android:textStyle="bold"
        android:inputType="number"
        android:background="@color/campo"/>

    <EditText android:id="@+id/edt_nota4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edt_nota2"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="50dp"
        android:padding="22sp"
        android:hint="nota 4"
        android:textStyle="bold"
        android:inputType="number"
        android:background="@color/campo"/>

    <TextView android:id="@+id/txt_mais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textSize="40sp"
        android:textColor="@color/campo"
        app:layout_constraintTop_toBottomOf="@id/edt_nota1"
        app:layout_constraintBottom_toTopOf="@id/edt_nota4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText android:id="@+id/edt_faltas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edt_nota3"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/campo"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="80dp"
        android:layout_marginStart="80dp"
        android:padding="10dp"
        android:textAlignment="center"
        android:hint="faltas"
        android:inputType="number"
        android:textStyle="bold"/>

    <Button android:id="@+id/btn_calcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/edt_faltas"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="@color/botao"
        android:textSize="18sp"
        android:text="CALCULAR"
        android:textStyle="italic"
        android:textColor="#076800"
        app:cornerRadius="1dp"/>

    <TextView android:id="@+id/txt_resultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_calcular"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="15dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:background="@color/resultado"
        android:layout_marginTop="45dp"
        android:gravity="center"/>
  </androidx.constraintlayout.widget.ConstraintLayout>